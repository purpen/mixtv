<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="145dp"
    android:layout_height="55dp"
    android:layout_gravity="center"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/background_focued_border_title"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">
    <!--android:background="@drawable/background_focued_border2"-->

    <TextView
        android:id="@+id/tv_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:focusable="false"
        android:gravity="center"
        android:textColor="#C2C2C2"
        android:textSize="22sp" />

    <View
        android:id="@+id/view_menu_indicate"
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/tv_menu_title"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tv_menu_title"
        android:layout_centerHorizontal="true"
        android:background="#FFBE28"
        android:visibility="gone" />

</RelativeLayout>